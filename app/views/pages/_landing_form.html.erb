<%= form_tag gardens_path, method: :get do %>
  <div class="product-search">

    <div class="search-element">
      <%= text_field_tag :address,
        params[:address],
        class: "search-input",
        placeholder: "Address"
      %>
    </div>

    <div class="search-element">
      <%= text_field_tag :start_date,
        params[:start_date],
        class: "search-input flatpickr",
        id: "start-date",
        placeholder: "From:"
      %>
    </div>

    <div class="search-element">
      <%= text_field_tag :end_date,
        params[:end_date],
        class: "search-input flatpickr",
        id: "end-date",
        placeholder: "To:"
      %>
    </div>

    <div class="search-element">
      <%= number_field_tag :capacity,
        params[:capacity],
        class: "search-input",
        placeholder: "Number of Guests"
      %>
    </div>

    <%= submit_tag "Search", class: "search-button" %>
  </div>
<% end %>


