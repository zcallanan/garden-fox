<div class="banner mt" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url( <%= cl_image_path("landing_banner.jpg", :width => 940, :height => 650, :crop => :fill) %>);">
  <h1>Rent a beautiful Garden</h1>
  <p>Make it a unique experience</p>

  <%= render 'landing_form' %>

</div>

<div class="top-gardens">
  <h1>Favourite Gardens</h1>
  <div class="container-fluid">
    <div class="row justify-content-center mb-5">
      <% @gardens.each do |garden| %>
        <% if garden.featured == true %>
          <div class="col-12 col-md-6 col-lg-3">
            <%= link_to garden_path(garden), class: "garden-link" do %>
              <div class="card" style="width: 33vb;">
                <% if garden.photo.attached? %>
                <%= cl_image_tag garden.photo.key, crop: :fill, class: "card-img-top", alt: "Card image cap" %>
                <% end %>
                <div class="card-body">
                  <div class="rating">
                    <h5 class="card-title"><%= garden.name %></h5>
                    <div class="stars">
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                      <span class="fa fa-star checked"></span>
                    </div>
                  </div>
                  <p class="card-text"><%= garden.description %></p>
                  <p class="availability"> <strong>Available from:</strong> <%= garden.start_time %>:00 to <%= garden.start_time + garden.duration %>:00 </p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

