
<h2>Book your garden</h2>

<%= simple_form_for([garden, booking]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
      <%= f.input :start_date,
        as: :string,
        label: 'Dates',
        placeholder: 'From',
        input_html: {
          value: f.object.start_date || Time.zone.now,
          class: "flatpickr",
          data: {
            controller: 'datepicker',
            datepicker_show_months: 1,
            datepicker_min_date: Time.zone.today,
            action: "change->booking#calculate",
            target: "booking.startDate"
          }
        }
      %>
      <%= f.input :end_date,
        as: :string,
        label: false,
        placeholder: 'To',
        disabled: false,
        input_html: {
          value: f.object.end_date,
          class: "flatpickr",
          data: {
            controller: 'datepicker',
            datepicker_show_months: 1,
            datepicker_min_date: Time.zone.today,
            action: "change->booking#calculate",
            target: "booking.endDate"
          }
        }
      %>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Book now", class: "btn btn-success" %>
  </div>
<% end %>
