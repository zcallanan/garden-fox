<div class="container">
  <div class="banner" style="" alt="">
    <div class="images">
      <%= link_to "Images", "#", class:  "btn btn-primary" %>
    </div>
  </div>

  <div class="row">

    <div class="main-container"></div>

      <div class="garden">
        <h1> <%= @garden.name %> <%= @garden.address %> </h1>
        <ol class="">
          <li> <%= @garden.size %> </li>
          <li> <%= @garden.capacity %> </li>
          <li> <%= @garden.filter_categories %> </li>
          <li> <%= @garden.garden_type %> </li>
        </ol>
      </div>

      <div class="description">
        <h3>description</h3>
        <p> <%= @garden.description %> </p>
      </div>

      <div class="house rules">
        <h3>house rules</h3>
        <p> <%= @garden.house_rules %> </p>
      </div>

    <div class="book-form">
      <div class="assessment">
        <h2>Select your travel dates so that we can show you the price</h2>
      </div>

      <%= simple_form_for([@garden, @booking]) do |f| %>
      <h3><span class="price">â‚¬<%= number_with_delimiter(@garden.price) %></span> per day</h3>
      <hr>
      <div class="form-row">
        <%= f.input :start_date,
          as: :string,
          label: 'Dates',
          placeholder: 'From',
          input_html: {
            value: f.object.start_date || Time.zone.now,
            data: {
              controller: 'datepicker',
              datepicker_show_months: 1,
              datepicker_min_date: Time.zone.today
            }
          }
        %>
        <%= f.input :end_date,
          as: :string,
          label: false,
          placeholder: 'To',
          disabled: false,
          input_html: {
            value: f.object.end_date,
            data: {
              controller: 'datepicker',
              datepicker_show_months: 1,
              datepicker_min_date: Time.zone.today
            }
          }
        %>
      </div>
      <%end%>
     </div>
    </div>
  </div>
</div>


