<div class="showpage-banner" ></div>
<div class="container">
  <div class="row">
    <div class="col-8 shadow p-3 mb-5 bg-white rounded p-5">
      <h1><strong> <%= @garden.name %> <%= @garden.address %> </strong></h1>
        <div class="col">
            <p> <%= @garden.size %> <strong>size</strong>  <%= @garden.capacity %>
            <strong>capacity</strong> <%= @garden.garden_type %> <strong>type</strong> </p>
        </div>
      <div class="col">
        <h2>Description</h2>
          <p> <%= @garden.description %> </p>
      </div>
      <div class="col">
        <h2>House rules</h2>
          <p> <%= @garden.house_rules %> </p>
      </div>
    </div>

    <div class="col-4 shadow p-3 mb-5 bg-white rounded p-5">
      <div class="assessment">
        <h2>Select your travel dates so that we can show you the price</h2>
      </div>
        <%= simple_form_for([@garden, @booking]) do |f| %>
      <h3><span class="price">â‚¬<%= number_with_delimiter(@garden.price) %></span> per day</h3>
        <hr>
      <div class="form-row">
        <%= f.input :start_date,
          as: :string,
          label: 'Dates',
          placeholder: 'From',
          input_html: {
            value: f.object.start_date || Time.zone.now,
            data: {
              controller: 'datepicker',
              datepicker_show_months: 1,
              datepicker_min_date: Time.zone.today
            }
          }
        %>
        <%= f.input :end_date,
          as: :string,
          label: false,
          placeholder: 'To',
          disabled: false,
          input_html: {
            value: f.object.end_date,
            data: {
              controller: 'datepicker',
              datepicker_show_months: 1,
              datepicker_min_date: Time.zone.today
            }
          }
        %>
      </div>
      <%end%>
      <div type="Book now!" class="btn btn-danger">Book now!</div>
    </div>
  </div>
</div>


